@model IEnumerable<WebApplication2.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Unapproved Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("ApproveUser", new { id = user.Id })" class="btn btn-success">Approve</a>
                </td>
                <td>
                    <form action="@Url.Action("RejectUser", new { id = user.Id })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

